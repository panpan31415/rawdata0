    <script type="text/html" id="questions_view">
        <h2>Questions</h2>
        <div data-bind="foreach: navigationViewModel.questions">
            <div data-bind="text: Url"></div>
            <div data-bind="text: CreationDate"></div>
            <div data-bind="text: Body"></div>
            <div><a data-bind="text:Title, attr:{href:Url}"></a></div>
        </div>
    </script>-->
    <script type="text/html" id="questions_search_view">
        <div class="col-sm-12">
            <div class="page-header text-muted">
                <h2>Questions: Search Result</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10" data-bind="foreach: searchViewModel.searchResult">
                <div class="search-content">
                    <a data-bind="attr:{href:Url}"><h3 data-bind="text:Title"></h3></a>
                    <h4><span class="label label-default" data-bind="text:Owner"></span></h4><h4>
                        <small class="text-muted">CreationDate :<span data-bind="text:CreationDate"></span> • <a data-bind="attr:{href:Url}" class="text-muted">Read More</a></small>
                    </h4>
                </div>
            </div>
        </div>
    </script>
    <script type="text/html" id="questions_view">
        <div class="col-sm-12">
            <div class="page-header text-muted">
                <h2>Questions</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10" data-bind="foreach: navigationViewModel.questions">
                <div class="search-content">
                    <a data-bind="attr:{href:Url}"><h3 data-bind="text:Title"></h3></a>
                    <h4><span class="label label-default" data-bind="text:Owner"></span></h4><h4>
                        <small class="text-muted"><span data-bind="text: CreationDate"></span> • <a data-bind="attr:{href:Url}" class="text-muted">Read More</a></small>
                    </h4>
                </div>
            </div>
        </div>
    </script>
    <!--showing a specific question-->
    <script type="text/html" id="question_view">
        <div class="row">
            <div id="question-related">
                <h3>question title</h3>
                <section>question body</section>
                <h4><span class="label label-default" data-bind="text:Owner"></span></h4><h4>
                    <small class="text-muted"><span data-bind="text: CreationDate"></span></small>
                </h4>
                <div id="comments-foreach">
                    <div id="comment-body"></div>
                    <h4><span class="label label-default" data-bind="text:Owner"></span></h4><h4>
                        <small class="text-muted"><span data-bind="text: CreationDate"></span></small>
                    </h4>
                </div>
                <div id="Answer-foreach">
                    <div id="Answer-body"></div>
                    <h4><span class="label label-default" data-bind="text:Owner"></span></h4><h4>
                        <small class="text-muted"><span data-bind="text: CreationDate"></span></small>
                    </h4>
                </div>
            </div>

        </div>
    </script>
    <footer></footer>
    
    <script src="Scripts/jquery-2.1.4.js"></script>
    <script src="Scripts/bootstrap.js"></script>
    <script src="Scripts/knockout-3.4.0.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/validator.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/App/searchViewModel.js"></script>
    <script src="~/App/navigationViewModel.js"></script>
    <script src="~/App/loginViewModel.js"></script>
    <script src="~/App/validatorViewModel.js"></script>
    <script src="~/App/masterViewModel.js"></script>

</body>
</html>
